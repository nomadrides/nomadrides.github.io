- content_for :head
  = feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed"

= wrap_layout :page do
  div class="p-default #{blog_page_css_class_name}"
    - if blog_article_page?
      = partial 'layouts/blog/article_header'
    div class="row align-center"
      div class="small-12 medium-10 columns"
        = yield
  - if blog_article_page?
    = partial 'layouts/shared/join_us'
